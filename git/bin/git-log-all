#!/usr/bin/env zsh

format="%C(yellow)%h%C(reset) %C(cyan)%ad%C(reset) %C(dim)(%ar)%C(reset) "
format+="%(trailers:key=Co-Authored-By,valueonly,unfold,separator=)%s%C(auto)%d%C(reset)"

git log --color=always --pretty=format:"$format" --date=short --graph --all "$@" \
    | sed 's/Claude <noreply@anthropic.com>/ðŸ¤– /' \
    | less -RFX