syntax enable

set visualbell t_vb=

if has('gui_macvim')
  set guifont=Ricty-Regular:h12
  set lines=60
  set columns=155
  set guioptions-=T
  set mouse=a
  let macvim_hig_hift_movement = 1

elseif has('gui_win')

  au GUIEnter * simalt ~x
  set guifont=VL\ ゴシック:h10
  set autochdir
  set clipboard=unnamed

endif
