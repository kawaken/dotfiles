[include]
    path = .gitconfig.local
[includeIf "gitdir:~/projects/src/github.com/"]
    path = .gitconfig.github
[includeIf "gitdir:~/projects/src/gist.github.com/"]
    path = .gitconfig.github
[core]
    pager = less -R
    excludesfile = ~/.gitignore-global
    autocrlf = input
    quotepath = false
    filemode = false
[color]
    ui = true
[push]
    default = current
[rerere]
    enable = true
[alias]
    al = log --no-merges --date=iso-strict --pretty='format:%C(yellow)%h %C(green)%cd %C(blue)%an%C(red)%d %C(reset)%s' --numstat
    ad = add
    ba = branch -a
    br = branch
    ci = commit
    cl = config --list
    co = checkout
    df = diff
    dc = diff --cached
    dw = diff --word-diff-regex='\\w+'
    ex = exclude
    fe = fetch
    hist = log --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %s' --graph --date=short
    id = rev-parse HEAD
    last = show HEAD
    lg = log --decorate --stat --all --graph --date=iso
    ls = ls-files
    mg = merge
    mo = merge origin/master
    mf = merge --ff-only
    pul = pull --ff-only
    pus = push
    rv = remote -v
    sh = show
    st = status -s --branch
    sts = stash
    stsu = stash -u
    td = log --oneline --since='12 hour ago'
    us = reset HEAD # unstage
[github]
	user = kawaken
[init]
	templatedir = ~/.git-hooks
[diff]
  algorithm = histogram
	compactionHeuristic = true
[commit]
	verbose = true
