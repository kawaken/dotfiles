#!/bin/bash
echo -e "\033[1;34m[最近2週間]\033[0m"
output=$(git log --pretty=format:'%C(yellow)%h%C(reset) %s%C(green)%d%C(reset)%C(blue)%(trailers:key=Co-Authored-By,only,unfold)%C(reset)' --graph --all --since='2 weeks ago' "$@" | sed 's/Co-Authored-By: .*/🤖/')
if [ -z "$output" ]; then
    echo -e "\033[0;90m最近2週間のコミットがありません\033[0m"
else
    echo "$output"
fi