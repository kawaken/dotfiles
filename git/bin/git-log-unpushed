#!/usr/bin/env zsh

format="%C(yellow)%h%C(reset) %C(cyan)%ad%C(reset) ðŸ«µ "
format+="%(trailers:key=Co-Authored-By,valueonly,unfold,separator=)%s%C(auto)%d%C(reset)"

{
    echo -e "\033[1;34m[origin/main..HEAD]\033[0m"
    git log --color=always --pretty=format:"$format" --date=relative origin/main..HEAD "$@" \
        | sed 's/ðŸ«µ Claude <noreply@anthropic.com>/ðŸ¤– /'
} | less -RFX