[include]
    path = .gitconfig.local
[core]
    pager = less -R
    excludesfile = ~/.gitignore-global
    autocrlf = input
    quotepath = false
    filemode = false
[color]
    ui = true
[push]
    default = simple
[rerere]
    enable = true
[alias]
    ad = add
    ba = branch -a
    br = branch
    ci = commit --verbose
    cl = config --list
    co = checkout
    df = diff
    dc = diff --cached
    dw = diff --word-diff
    ex = exclude
    fe = fetch
    hist = log --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %s' --graph --date=short
    last = show HEAD
    lg = log --decorate --stat --all --graph --date=iso
    ls = ls-files
    mg = merge
    mo = merge origin/master
    mf = merge --ff-only
    pul = pull --ff-only
    pus = push
    rv = remote -v
    sh = show
    st = status -s
    sts = stash
    stsu = stash -u
    td = log --oneline --since='12 hour ago'
    us = reset HEAD # unstage
[github]
	user = kawaken
[init]
	templatedir = ~/.git-hooks
[diff]
  algorithm = histogram
