[include]
    path = .gitconfig.local
[core]
    pager = less -R
    excludesfile = ~/.gitignore-global
    autocrlf = input
    quotepath = false
    filemode = false
[color]
    ui = true
[push]
    default = simple
[rerere]
    enable = true
[alias]
    cl = config --list

    ad = add
    us = reset HEAD # unstage
    ci = commit
    co = checkout
    df = diff
    dc = diff --cached
    ls = ls-files
    st = status -s

    sh = show
    last = show HEAD
    lg = log --decorate --stat --all --graph --date=iso
    hist = log --pretty=format:'%C(yellow)%h %C(blue)%ad%Creset %s' --graph --date=short
    today = log --oneline --since='12 hour ago'
    sts = stash
    stsu = stash -u

    br = branch
    ba = branch -a
    switch = checkout
    fe = fetch
    mg = merge
    mo = merge origin/master
    pul = pull --ff-only
    pus = push
    rv = remote -v

    up = !git fetch --all && git checkout origin/master && git merge --ff-only
    
    ex = exclude
